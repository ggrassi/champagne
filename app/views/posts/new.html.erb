<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </p>
 
  <p>
    <%= f.label :street %><br>
    <%= f.text_area :street %>
  </p>
  <p>
    <%= f.label :city %><br>
    <%= f.text_area :city %>
  </p>
  <p>
    <%= f.label :zip %><br>
    <%= f.text_area :zip %>
  </p>
  <p>
    <%= f.label :longitude %><br>
    <%= f.text_area :longitude %>
  </p>
  <p>
    <%= f.label :latitude %><br>
    <%= f.text_area :latitude %>
  </p>
  <p>
    <%= f.label :offer_msg %><br>
    <%= f.text_area :offer_msg %>
  </p>

 
  <p>
    <%= f.submit %>
  </p>
<% end %>
